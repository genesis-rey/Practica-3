Algoritmo Radio_Circulo
	
	Definir radio, diametro, circunferencia, area Como Real
	
    Escribir "Ingrese el radio del círculo:"
    Leer radio
	
    diametro <- 2 * radio
    circunferencia <- 2 * 3.1416 * radio
    area <- 3.1416 * radio * radio
	
    Escribir "El diámetro es: ", diametro
    Escribir "La circunferencia es: ", circunferencia
    Escribir "El área es: ", area
	
FinAlgoritmo
